<?xml version="1.0" encoding="UTF-8"?>
<web-app>
   <!-- Setup Injector for application. -->
   <listener>
      <listener-class>com.jts.fooguice.AppServletConfig</listener-class>
   </listener>

   <!-- Give Guice control of requests. -->
   <filter>
      <filter-name>guiceFilter</filter-name>
      <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
   </filter>
   <filter-mapping>
      <filter-name>guiceFilter</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>
</web-app>
